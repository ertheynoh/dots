" nex/nvi settings
set verbose
set showmode
set report=1
set ruler
set autoindent
set iclower
set wraplen=80
set cedit=\	
set filec=\	

" keybinds
map Y y$
map gg 1G

" macros
map \p !}fmt -w 80
map \f :%!fmt -w 80

map \n :-1read $HOME/pandoc/snippets/neocities_post.html
map \me :!groff -k -me % > 
