" nexrc
set verbose
set showmode
set ruler
set autoindent
set iclower
set wraplen=80
set showmatch

" tab for command history editing and filename completion
set cedit=\	
set filec=\	

map Y y$
map gg 1G
map \p !}fmt -w 80
map \f :%!fmt -w 80
map \d :r !date '+\%Y-\%m-\%d'
map \s :!spell %
map \= :.t.:s/./=/g
map \- :.t.:s/./-/g
map \3 I### A ###
map \4 I#### A ####

" neocities html boilerplate
map \n :-1read $HOME/pandoc/snippets/neocities_post.html/titlef>a

" copy current paragraph, file, marked selection ("a), or line to tmux pane 1 
" for running code through an interpreter without leaving vi :)
map mm {j^ma}k$:'a,. w ! cat | tmux loadb - && tmux pasteb -t .1
map mf :w | !tmux loadb % && tmux pasteb -t .1
map ms :'a,. w ! cat | tmux loadb - && tmux pasteb -t .1
map ml :. w ! cat | tmux loadb - && tmux pasteb -t .1
