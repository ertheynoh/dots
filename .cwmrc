# cwm configuration

# applications menu
command xterm xterm 
command files xfe
command firefox firefox
command thunderbird thunderbird
command dictionary gnome-dictionary
command keepass keepassxc
command syncthing syncthing
command gnucash gnucash
command nicotine nicotine
command torrent qbittorrent 
command xcalc "xcalc -stipple"
command xlock "xlock -mode euler2d"

# window behavior
gap 17 4 0 0
sticky yes
ignore "xconsole"
autogroup 0 xconsole,XConsole
snapdist 7
fontname "Inter"
color menubg "powder blue"
color activeborder "rebecca purple"

# keybindings

## application shortcuts
bind-key 4-t "xterm -bg lemonchiffon -fg black"
bind-key 4-b firefox
bind-key 4-f xfe
bind-key 4-m thunderbird
bind-key 4-c "xterm -bg black -fg white -g +427+15 -g 104x33 -e cmus"
bind-key 4-p keepassxc
bind-key 4-n "xcalc -stipple"
bind-key 4-z 'sct 3500'
bind-key 4-Z 'sct 2500'
bind-key 4-X 'sct 1500'
bind-key 4M-x xkill
bind-key 4-x 'scrot -u'
bind-key 4-d gnome-dictionary
bind-key 4-u "xterm -e tmux"
bind-key 4-T "xterm -bg midnightblue -fg gray -e tmux"

## group management
bind-key M-1 group-only-1
bind-key M-2 group-only-2
bind-key M-3 group-only-3
